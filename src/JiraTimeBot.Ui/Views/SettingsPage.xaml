<UserControl x:Class="JiraTimeBot.Ui.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JiraTimeBot.Ui"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:viewModels="clr-namespace:JiraTimeBot.Ui.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
      >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    </Style>
                </ResourceDictionary>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="250" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Режим работы" />

        <ComboBox Grid.Row="0" Grid.Column="1" 
                  ItemsSource="{Binding Path=WorkModes}"
                  SelectedItem="{Binding Path=CurrentWorkType}"
                  >
        </ComboBox>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Путь до репо" />
        
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Path=RepositoryPath}"
                 />

        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Логин Jira" />
        
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding Path=JiraLogin}"
                 />

        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Пароль Jira" />

        <PasswordBox Name="PBox" Grid.Row="3" Grid.Column="1"
                                          
                     />

        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Mercurial Name" />

        <TextBox Grid.Row="4" Grid.Column="1" />

        <TextBlock Grid.Row="5" Grid.Column="0"
                   Text="Округл. Времени" />

        <TextBox Grid.Row="5" Grid.Column="1" />

        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="JQL" />

        <TextBox Grid.Row="6" Grid.Column="1" />

        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Задача учета времени" />

        <TextBox Grid.Row="7" Grid.Column="1" />

        <TextBlock Grid.Row="8" Grid.Column="0"
                   Text="Время запуска" 
                   
                   />
        
        <xctk:DateTimePicker Grid.Row="8" Grid.Column="1"
                             Format="ShortTime"
                             ShowDropDownButton="False"
                             TimePickerAllowSpin="True"
                             TimePickerShowButtonSpinner="True"
                             TimePickerVisibility="Visible"
                             />
        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Vertical"
                    >

            <CheckBox Content="Автозагрузка" />
        
            <CheckBox Content="Добавлять описание" />
        </StackPanel>
        <Button Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" 
                Command="{Binding Path=SaveSettingsCommand}"
                Content="Сохранить"/>


    </Grid>
</UserControl>
