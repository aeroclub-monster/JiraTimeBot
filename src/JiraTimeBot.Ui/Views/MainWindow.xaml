<Window x:Class="JiraTimeBot.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:JiraTimeBot.Ui.ViewModels"
        xmlns:ui="clr-namespace:JiraTimeBot.Ui"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        d:DataContext="{d:DesignInstance viewModels:ApplicationViewModel}"
        Title="ApplicationWindow"
        Icon="../app.ico"
        ShowInTaskbar="True" 
        ResizeMode="NoResize"
        d:DesignWidth="517.579" d:DesignHeight="260.977"
        >
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:MainPageViewModel}">
            <ui:MainPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
            <ui:SettingsPage/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding Path=CurrentViewModel}" />
    </Grid>
    
</Window>
